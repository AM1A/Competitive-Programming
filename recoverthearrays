#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    int n; 
    scanf("%d",&n);
    int *file = malloc(sizeof(int) * n);
    for(int file_i = 0; file_i < n; file_i++){
       scanf("%d",&file[file_i]);
    }
    int i = 0,ac = 0;
    while(i<n)
    {
        ac++;
        i = i+file[i]+1;
        
    }
    printf("%d",ac);
    //  Print the number of arrays defined in 'file' to STDOUT.
    return 0;
}
