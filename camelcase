#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    char* s = (char *)malloc(100240 * sizeof(char));
    scanf("%s",s);
    int i = 0,count = 0;
    for(i = 0;i<strlen(s);i++)
    {
        if(isupper(s[i]))
        {
            count++;
        }
        
    }
    count++;
    printf("%d",count);
    return 0;
}
